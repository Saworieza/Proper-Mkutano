<p id="notice"><%= notice %></p>

<h1>Listing Advert2s</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advert2s.each do |advert2| %>
      <tr>
        <td><%= link_to (image_tag advert2.image.url(:medium)), advert2.link, target: "_blank" %></td>
        <td><%= advert2.link %></td>
        <td><%= link_to 'Show', advert2 %></td>
        <td><%= link_to 'Edit', edit_advert2_path(advert2) %></td>
        <td><%= link_to 'Destroy', advert2, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


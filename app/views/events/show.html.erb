  }
  #items{
    padding-left:2em;
    margin-top:1em;
  }
  #image-holder{
    background:none repeat scroll 0% 0% ;
    visibility: visible;
    padding-top:1em;
    padding-bottom:0.5em;
    width:300px;
    float:left;
    min-height: 300px !important;
    margin-left: 20px;
    opacity: 1;
    margin-right:3em;
    transform:none;
  }
  #content-holder{}
  #actions{
    color:blue;
    padding-bottom:1em;
  }
  .actions{
    color:chocolate ;
  }
  .content-p{
    padding-top:0.8em;
  }
  .img{
    border:thin solid black;
    border-radius:2px;
    color:#ccc;
    background: none repeat scroll 0% 0% ;
    width:100%;
    visibility: visible;
  }
</style>
</div>
<!-- /Navbar -->
<div id="container" class="container rows"><!-- overal container-->
  <div id="items"><!--items-->
    <p id="notice"><%= notice %></p>

    <div id="image-holder">
      <div class="img">
        <%= image_tag @event.image.url(:medium) %> 
      </div>
    </div>
  <div id="content-holder">
    <!--<p>
      <strong>Industry-I</strong>
      <%= @event.name %>
    </p>-->


    <p class="content-p">
      <strong>Event Name:</strong>
      <%= @event.name %>
    </p>

    <p>
      <strong>Category:</strong>
      <%= @event.category %>
    </p>
    <p>
      <strong>Theme:</strong>
      <%= @event.theme %>
    </p>
    <p>
      <strong>Venue:</strong>
      <%= @event.venue %>
    </p>
    <!--<p>
      <strong>Company:</strong>
      <%= @event.company %>
    </p>-->
    <p>
      <strong>Country:</strong>
      <%= @event.country %>
    </p>

    <!--<p>
      <strong>Organizer:</strong>
      <%#= @event.organizer %>
    </p>-->

    <p>
      <strong>Date:</strong>
      <%= @event.date %>
    </p>

    <p>
      <strong>Location:</strong>
      <%= @event.location %>
    </p>

    <!--<p>
      <strong>Link:</strong>
      <%= @event.link %>
    </p>-->

    <div id="actions">
      <% if user_signed_in? %>
      <%= link_to 'Edit', edit_event_path(@event), class: "actions" %> |
      <%= link_to 'Back', events_path, class: "actions" %> |
      <%= link_to 'Delete', @event, method: :delete, data: { confirm: 'Delete this Event ?' }, class: "actions" %>
      <% end %>
    </div>
  </div>
  </div>
  <div class="col-sm-4">
  </div>
</div>


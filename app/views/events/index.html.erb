<div class="rows">
<!--search box-->
<div class="search-box wb-bottom" style="padding: 5px; overflow: hidden; border-bottom-width:2px;">
    <form>
      <input type="text" class="search-input wb" placeholder="Search By Category..."/ style="border-width:2px; width:40%; margin-right:2%; padding:10px; font-size:14px; float:left;">
      <input type="submit" class="search-button wb" value="Go" style="width:20%; background: rgba(255,255,255, 0.15); border-width:2px;"/>
    </form>
  </div>

<h2 class="icon-li page-title padded-bottom "> Events</h2>

<%= form_for_filterrific @filterrific, html: { id: 'filterrific-no-ajax-auto-submit' } do |f| %>
  <div>
    Search
    <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
    <%= f.text_field(
      :search_query,
      class: 'filterrific-periodically-observed'
    ) %>
  </div>
  <%= f.submit 'Filter' %>
  <% end %>
  <%= render(
    partial: 'events/list',
    locals: { events: @events }
  ) %>



  <div class="row" >
      <div class="col-sm-3 text-left features" style="border-right: 1px solid grey; margin-right: 3em;"> 
        
        <!-- the link to below is just an experiment to see how it will look like in the future -->
        <p class="icon-li"><%= link_to "March 2015", "http://us10.campaign-archive1.com/?u=a15192d07e7f3fd4cbde264bd&id=1e9f263c2c" %></p>
        <p class="icon-li ">A web revision app that is desktop, tablet and mobile-friendly</p>
      </div>
      <div class="col-sm-8 text-left features free" >

      <table>
        <thead>
           <tr>
              <th>Image</th>
              <th>Name</th>
              <th>Category</th>
              <th>Theme</th>
              <th>Venue</th>
              <th>Company</th>
              <th>Country</th>
              <th>Organizer</th>
              <th>Date</th>
              <th>Location</th>
              <!--<th>Link</th>-->
              <th colspan="3"></th>
            </tr>
          </thead>

        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td ><%= link_to (image_tag event.image.url(:thumb)), event %></td>
              <td><%= event.name %></td>
        
              <td><%= event.category %></td>
              <td><%= event.theme %></td>
              <td><%= event.venue %></td>
              <td><%= event.company %></td>
              <td><%= event.country %></td>

              <td><%= event.organizer %></td>
              <td><%= event.date %></td>
              <td><%= event.location %></td>
              <td><%#= event.link %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
      <%= will_paginate @events%>
</div>


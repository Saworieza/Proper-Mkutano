  </div>

  <div class="field">
    <%= f.label :category %><br>
    <%= f.text_field :category %>
  </div>

  <div class="field">
    <%= f.label :event_Name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :theme %><br>
    <%= f.text_field :theme %>
  </div>

  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>

  <div class="field">
    <%= f.label :venue %><br>
    <%= f.text_field :venue %>
  </div>

  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :country %><br>
    <%= f.text_field :country %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

  <!-- not visible to public/ just to updater-->
  <div class="field">
    <%#= f.label :link %><br>
    <%#= f.text_field :link %>
  </div>

  <div class="field">
    <%#= f.label :company %><br>
    <%#= f.text_field :company %>
  </div>

  <div class="field">
    <%# = f.label :organizer %><br>
